
pipeline {
    agent any

    tools {
        maven 'Maven 3.8.6'  // Use the name from "Global Tool Configuration" if different
    }

    stages {
        stage('Clone') {
            steps {
                git url: 'git@github.com:aaryanwadhawan7/SpringBoot-Employee-REST-API.git', credentialsId: 'SHA256:wX9ZyFLr20nj7lR3m2zIUdZ5LJ/YGkt1dg+9SHkr790'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
}
